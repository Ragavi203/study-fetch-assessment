# Database
DATABASE_URL="postgresql://username:password@localhost:5432/studyfetch?schema=public"

# JWT Secret for authentication
JWT_SECRET="your_super_secret_jwt_key_here"
JWT_EXPIRES_IN="7d"

# OpenAI API Key
OPENAI_API_KEY="sk-your-openai-api-key-here"
OPENAI_MODEL="gpt-4-turbo"

# Environment
NODE_ENV="development"

# Next.js API URL (for production deployment)
NEXT_PUBLIC_API_URL="http://localhost:3000"

# Vercel deployment specific
VERCEL_URL=""
VERCEL_ENV=""

# Upload settings
UPLOAD_DIR="public/uploads"
MAX_UPLOAD_SIZE="10485760" # 10MB in bytes

# Optional: Voice settings
NEXT_PUBLIC_ENABLE_VOICE="true"
TEXT_TO_SPEECH_API_KEY=""  # Optional, falls back to browser TTS
